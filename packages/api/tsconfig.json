{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "./",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"]
}
