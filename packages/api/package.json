{
  "name": "tellery-api",
  "version": "0.5.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "start:websocket": "node dist/src/socket/index.js",
    "dev": "COMPATIBLE=true NODE_ENV=dev concurrently \"tsc -w\" \"cross-env nodemon dist/src/index.js\"",
    "dev:websocket": "NODE_ENV=dev concurrently \"tsc -w\" \"cross-env nodemon dist/src/socket/index.js\"",
    "proto": "mkdir -p dist/src/protobufs src/protobufs && grpc_tools_node_protoc --js_out=import_style=commonjs,binary:dist/src/protobufs --grpc_out=dist/src/protobufs --plugin=grpc_node_plugin -I ../protobufs ../protobufs/*.proto && grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=src/protobufs -I ../protobufs ../protobufs/*.proto",
    "typeorm": "node ./node_modules/typeorm/cli.js -f dist/ormconfig.js",
    "compile": "npm run clean && npm run proto && npm run assets && tsc",
    "assets": "cp -r src/assets dist/src",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "lint": "eslint --fix --ext .",
    "test": "NODE_ENV=test ava",
    "test:init": "./hack/init_test.sh",
    "coverage": "nyc ava",
    "create:user": "node dist/src/scripts/createUser.js",
    "create:workspace": "node dist/src/scripts/createWorkspace.js",
    "create:initStory": "node dist/src/scripts/createInitialStory.js",
    "configure:metabase": "node dist/src/scripts/appendMetabaseConfig.js"
  },
  "author": "iftech",
  "license": "ISC",
  "dependencies": {
    "@socket.io/postgres-adapter": "^0.1.1",
    "aws-sdk": "^2.949.0",
    "bluebird": "^3.7.2",
    "cache-manager": "^3.4.4",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "eta": "^1.12.3",
    "formidable": "^1.2.2",
    "google-protobuf": "^3.17.3",
    "got": "^11.8.2",
    "grpc": "^1.24.10",
    "http-errors": "^1.8.0",
    "ioredis": "^4.27.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "koa2-connect-history-api-fallback": "^0.1.3",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.23",
    "nodemailer": "^6.6.3",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "search-query-parser": "^1.6.0",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "socket.io-redis": "^6.1.1",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/cache-manager": "^3.4.2",
    "@types/config": "0.0.39",
    "@types/google-protobuf": "^3.15.3",
    "@types/http-errors": "^1.8.1",
    "@types/ioredis": "^4.26.6",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.4",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.3",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@types/redis": "^2.8.31",
    "@types/test-listen": "^1.1.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "ava": "^3.15.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "grpc-tools": "^1.11.2",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "test-listen": "^1.1.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --config .prettierrc.json --ignore-path .prettierignore",
      "eslint --fix --config .eslintrc.json --ignore-path .eslintignore"
    ]
  },
  "ava": {
    "files": [
      "dist/tests/**/*",
      "!dist/tests/testutils"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true
  }
}
